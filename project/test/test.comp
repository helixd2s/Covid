#version 460 core

// 
#extension GL_EXT_scalar_block_layout : require
#extension GL_EXT_shader_explicit_arithmetic_types_int32 : require
#extension GL_EXT_shader_explicit_arithmetic_types_int64 : require
#extension GL_EXT_buffer_reference : require
#extension GL_EXT_buffer_reference2 : require

//
layout (local_size_x = 256, local_size_y = 1, local_size_z = 1) in;

//
layout(buffer_reference, std430, buffer_reference_align = 16) buffer blockType {
    uint32_t value;
};

// 
layout(set = 0, binding = 0, scalar, row_major) uniform MatrixBlock
{
  uint64_t ssbo;
};

// 
void main() {
  blockType(ssbo+gl_GlobalInvocationID.x*4u).value = gl_GlobalInvocationID.x;
};
