void reproject3D(in PixelSurfaceInfo surface, in PixelHitInfo data, in uint pixelId, in vec3 srcRayDir, in int type) {
  //
  const vec3 srcHitPos = data.direction.xyz + data.direction.w * srcRayDir;
  const vec3 srcPos = data.direction.xyz;
  const vec3 srcNormal = surface.normal.xyz;

  //
  const vec3 dstPos = vec4(vec4(srcPos.xyz, 1.f) * inverse(getPreviousInstanceTransform(instancedData.opaqueAddressInfo, surface.indices.x)), 1.f) * getInstanceTransform(instancedData.opaqueAddressInfo, surface.indices.x);
  const vec3 dstHitPos = vec4(vec4(srcHitPos.xyz, 1.f) * inverse(getPreviousInstanceTransform(instancedData.opaqueAddressInfo, data.indices.x)), 1.f) * getInstanceTransform(instancedData.opaqueAddressInfo, data.indices.x);
  const vec3 dstNormal = normalize(srcNormal.xyz * toNormalMat(getPreviousInstanceTransform(instancedData.opaqueAddressInfo, surface.indices.x)) * toNormalMat(inverse(getInstanceTransform(instancedData.opaqueAddressInfo, surface.indices.x))));
  const vec3 dstRayDir = normalize(srcRayDir.xyz * toNormalMat(getPreviousInstanceTransform(instancedData.opaqueAddressInfo, surface.indices.x)) * toNormalMat(inverse(getInstanceTransform(instancedData.opaqueAddressInfo, surface.indices.x))));

  //
  const vec3 srcHitFoundIntersection = find_reflection_incident_point( srcPos.xyz, srcHitPos.xyz, dstPos.xyz, normalize(srcNormal.xyz));
  //const vec3 srcHitFoundIntersection = find_reflection_incident_point( dstPos.xyz, srcHitPos.xyz, srcPos.xyz, normalize(srcNormal.xyz));
  const vec3 dstHitFoundIntersection = vec4(vec4(dstPos.xyz, 1.f) * inverse(getPreviousInstanceTransform(instancedData.opaqueAddressInfo, data.indices.x)), 1.f) * getInstanceTransform(instancedData.opaqueAddressInfo, data.indices.x);

  //
  const vec4 srcHitPersp = vec4(vec4(srcHitFoundIntersection, 1.f) * constants.previousLookAt, 1.f) * constants.perspective;
  const vec4 dstHitPersp = vec4(vec4(dstPos, 1.f) * constants.lookAt, 1.f) * constants.perspective;
  const vec2 screenSrc = (srcHitPersp.xy/srcHitPersp.w * 0.5f + 0.5f);
  const vec2 screenDst = (dstHitPersp.xy/dstHitPersp.w * 0.5f + 0.5f);
  const ivec2 intSrc = ivec2(screenSrc * vec2(extent));
  const ivec2 intDst = ivec2(screenDst * vec2(extent));
  const uint srcId = uint(intSrc.x + intSrc.y * extent.x);
  const uint dstId = uint(intDst.x + intDst.y * extent.x);
  const bool validSrc = intSrc.x < extent.x && intSrc.y < extent.y;
  const bool validDst = intDst.x < extent.x && intDst.y < extent.y;

//
#define SURF_DST pixelData.pixels[dstId].surface
#define REFL_DST pixelData.pixels[dstId].reflection
#define TRNS_DST pixelData.pixels[dstId].transparency

// 
#define SURF_SRC pixelData.pixels[srcId].surface
#define REFL_SRC pixelData.pixels[srcId].reflection
#define TRNS_SRC pixelData.pixels[srcId].transparency

  // 
  if (validSrc && validDst) {
    // 
    const bool validDstDist = distance(texture(sampler2D(textures[framebufferAttachments[2]], samplers[0u]), screenDst.xy, 0).xyz, dstPos.xyz) < 0.001f;

    //
    if ( type == 0 && REFL_SRC.color.w > 0.f && validDstDist && (REFL_SRC.direction.w < 10000.f || REFL_DST.color.w <= 0.f)) {
      accumulateReflection(dstId, cvtRgb16Float(REFL_SRC.color));
      pixelData.pixels[dstId].reflection.actualDirection = vec4(dstPos, distance(dstHitPos, dstPos));
      //accumulateReflection(pix, cvtRgb16Float(data.color));
      //REFL.actualDirection = vec4(dstPos, hitDist);
    };
    if ( type == 1 && TRNS_SRC.color.w > 0.f && validDstDist && (TRNS_SRC.direction.w < 10000.f || TRNS_DST.color.w <= 0.f)) { 
      accumulateTransparency(dstId, cvtRgb16Float(TRNS_SRC.color));
      pixelData.pixels[dstId].transparency.actualDirection = vec4(dstPos, distance(dstHitPos, dstPos));
      //accumulateTransparency(pix, cvtRgb16Float(data.color));
      //TRNS.actualDirection = vec4(dstPos, hitDist);
    };
  };

};

