  //
  //const vec3 prevHitFoundIntersection = find_reflection_incident_point( currentPos.xyz, prevHitPos.xyz, prevPos.xyz, normalize(prevNormal.xyz));
  const vec3 prevHitFoundIntersection = find_reflection_incident_point( prevPos.xyz, prevHitPos.xyz, currentPos.xyz, normalize(prevNormal.xyz));
  const vec3 currentHitFoundIntersection = vec4(vec4(prevHitFoundIntersection.xyz, 1.f) * inverse(getPrevInstanceTransform(instancedData.opaqueAddressInfo, data.indices.x)), 1.f) * getInstanceTransform(instancedData.opaqueAddressInfo, data.indices.x);

  // 
  const float hitDist = distance(currentHitFoundIntersection, currentPos);
  const vec3 hitOutDir = normalize(currentHitFoundIntersection - currentPos);

  //
  //const vec4 hitPersp = vec4(vec4(hitFoundIntersection, 1.f) * constants.lookAt, 1.f) * constants.perspective;
  //const vec4 hitSurfacePersp = vec4(vec4(hitFoundIntersection - hitDist * hitOutDir, 1.f) * constants.lookAt, 1.f) * constants.perspective;
  const vec4 prevHitPersp = vec4(vec4(prevHitFoundIntersection, 1.f) * constants.previousLookAt, 1.f) * constants.perspective;
  const vec4 currentHitPersp = vec4(vec4(currentHitFoundIntersection, 1.f) * constants.lookAt, 1.f) * constants.perspective;
  const ivec2 intSrc = ivec2((prevHitPersp.xy/prevHitPersp.w * 0.5f + 0.5f) * vec2(extent));
  const ivec2 intDst = ivec2((currentHitPersp.xy/currentHitPersp.w * 0.5f + 0.5f) * vec2(extent));
  const uint srcId = uint(intSrc.x + intSrc.y * extent.x);
  const uint dstId = uint(intDst.x + intDst.y * extent.x);
  const bool validSrc = intSrc.x < extent.x && intSrc.y < extent.y;
  const bool validDst = intDst.x < extent.x && intDst.y < extent.y;

//
#define SURF_DST pixelData.pixels[dstId].surface
#define REFL_DST pixelData.pixels[dstId].reflection
